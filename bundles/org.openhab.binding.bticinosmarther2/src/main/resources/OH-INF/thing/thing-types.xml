<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="bticinosmarther2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<bridge-type id="smarther2account">
		<!-- Comment this in for Things which need a Bridge to function.
			<supported-bridge-type-refs>
			<bridge-type-ref id="smarther2Bridge" />
			</supported-bridge-type-refs>
		-->

		<label>Smarther2 Binding Account</label>
		<description>smarther2 Binding Account Bridge</description>
		<config-description>
			<parameter name="username" type="text" required="true">
				<label>Email</label>
				<description>email of Netatmo Account</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<context>password</context>
				<label>Password</label>
				<description>Password of Netatmo Account</description>
			</parameter>
		</config-description>
	</bridge-type>

	<thing-type id="smarther2device">
		<supported-bridge-type-refs>
			<bridge-type-ref id="smarther2account"/>
		</supported-bridge-type-refs>

		<label>Smarther2 Device</label>
		<description>Thing for Smarther2 Device</description>

		<channels>
			<channel id="temperature" typeId="temperature-channel"/>
			<channel id="humidity" typeId="humidity-channel"/>
		</channels>

		<config-description>
			<parameter name="roomId" type="text" required="true">
				<context>str</context>
				<label>RoomId</label>
				<description>RoomId of the device</description>
			</parameter>
			<parameter name="homeId" type="text" required="true">
				<context>str</context>
				<label>HomeId</label>
				<description>HomeId of the device</description>
			</parameter>
			<parameter name="deviceId" type="text" required="true">
				<context>str</context>
				<label>DeviceId</label>
				<description>DeviceId of the device</description>
			</parameter>
			<parameter name="pollingInterval" type="integer" required="true">
				<label>Refresh Interval</label>
				<description>Interval the device is polled in sec.</description>
				<default>60</default>
			</parameter>
		</config-description>
	</thing-type>


	<channel-type id="temperature-channel">
		<item-type>Number:Temperature</item-type>
		<label>Temperature</label>
		<description>Current temperature</description>
		<category>Temperature</category>
		<state readOnly="true" pattern="%.1f %unit%"/>
	</channel-type>

	<channel-type id="humidity-channel">
		<item-type>Number:Dimensionless</item-type>
		<label>Humidity</label>
		<description>Current humidity</description>
		<category>Humidity</category>
		<state readOnly="true" min="0" max="100" pattern="%d %unit%"/>
	</channel-type>

</thing:thing-descriptions>
